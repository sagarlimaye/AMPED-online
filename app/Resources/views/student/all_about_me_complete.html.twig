{% extends 'student/base.html.twig' %}

{% block main_content %}
    <div class="row">
        <h2 class="sub-header">All about me</h2>
        <img src="{{asset('topRight.png')}}" width="100" height="100" style="float:right" >
    </div>
    <div class="row">
        {% for answerBatch in answers|batch(questions|length, 'Couldn\'t retrieve answer for this question') %}
            {% for key, answer in answerBatch %}
                <p class = "test"><b>{{questions[key].text}}</b></p> 
                <p class ="well"><i>{{answer}}</i></p>
            {% endfor %}
        {% endfor %}
    </div>
    {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
        {% set session = app.request.attributes.get('num') %}        
        <a class="btn btn-warning col-sm-6 col-md-1" href="{{ path('answers_save', {'id':session,'type':'all-about-me'}) }}">Save<a>
    {% endif %}
    
{% endblock %}
