{% extends app.request.isXmlHttpRequest ? 'base_ajax.html.twig' : 'base.html.twig' %}
{% block sidebar_options %}
    <div class="row">
    {{ knp_menu_render('AppBundle:Builder:completedMenu') }}
    </div>
    <div class="row">
    {{ knp_menu_render('AppBundle:Builder:mainMenu') }}
    </div>    
    {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
        <a class="btn btn-warning col-sm-6 col-md-12" href="{{path('answers_save_all')}}">Save all answers</a>
    {% endif %}

{% endblock %}
{% block navbar %}
    {{ parent() }}
    {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
        <li><a class="btn btn-danger" href="{{ path('index_list', {'_switch_user': '_exit'}) }}">Back to my account</a></li>
    {% endif %}
{% endblock %}
        
    

