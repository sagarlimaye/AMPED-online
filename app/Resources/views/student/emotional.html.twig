    {{ knp_menu_render('AppBundle:Builder:completedMenu') }}
{% endblock %}

{% block main_content %}
    <h2 class="sub-header">Learn New Skills: Emotional</h2>
    <img src="{{asset('topRight.png')}}" width="100" height="100" style="float:right" >
  </div>


  <select id="selectOption" class="form-control">
    <option selected disabled>Choose Module</option>
    <option  value="../Modules/module" id="1" >Learning your A.B.C.'s</option>
    <option  value="../Modules/module" id="4" >Motivation</option>
    <option  value="../Modules/module" id="7" >Relaxation</option>
    <option  value="../Modules/module" id="10" >Coping with Stress</option>
