    <option  value="../Modules/module" id="3" >Changing your G.P.A.</option>
  </select>
      <br>



    <div class="navButtons">
      <button id="prevButton" type="button" class="btn btn-lg btn-primary" onclick="options()"> Select </button>
    </div>          
{% endblock %}

{% block custom_scripts %}
    <script type="text/javascript">
      function options() {
        var e = document.getElementById("selectOption");
        var strUser = e.options[e.selectedIndex].value;
        var moduleNumber = e.options[e.selectedIndex].id + '.html';
        strUser += moduleNumber;
        console.log(strUser);
        window.location=strUser;
      }
    </script>
{% endblock %}

